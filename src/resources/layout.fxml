<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" fx:controller="scraper.Controller" fx:id="pane">
    <top>
        <HBox prefWidth="600.0" prefHeight="40.0" alignment="CENTER" spacing="10" fx:id="requestBox">
            <TextField fx:id="url" prefHeight="30.0" prefWidth="350.0"/>
            <Button text="Scrape" fx:id="getHTML" onAction="#retrieveHTML" prefHeight="30.0" />
            <CheckBox fx:id="noJSBox" text="Exclude scripts" />
        </HBox>
    </top>
    <center>
        <TextArea fx:id="htmlOutput"/>
    </center>
    <bottom>
    </bottom>
</BorderPane>